#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

int factorial(int n);

int main(){
	int n,fac;
	cout<<"ingrese el valor de N "<<endl;
	cin>>n;
	fac= factorial(n);
	cout<<"el factorial es : "<<fac<<endl;

	getch();
return 0;
}

int factorial(int n){
int fact=1,k;
for(k=1;k<=n;k++){
fact=fact*k;



}
return fact;


}
