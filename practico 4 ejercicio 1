using namespace std;

int suma(int);

int main(){
	int n,s;
	cout<<"ingrese un numero"<<endl;
	cin>>n;
	s=suma(n);
	cout<<"la suma de los digitos del numero es igual a : "<<s;


	getch();
return 0;
}


int suma(int n){
int sum=0,res;
    while(n>=1){
    res=n%10;
	sum=sum+res;
	n=n/10;
	
	}
	return sum;
}
